.row.show-grid
  .span7
    #admin-title.span7
      %h1 Blog Admin
      %button#new-btn.btn{:type => "button"} New Post
      %br
    %table.table.table-bordered.table-striped
      %thead
        %tr
          %th Date Published
          %th Title
          %th Keywords
          %th Options
      %tbody
        -#-binding.pry
        -@posts.map do |p|
          %tr
            %td 
              %span #{p[:date_published]}
            %td 
              %span #{p[:title]}
            %td 
              =p[:keywords].map {|k| k.name}.join(", ") 
            %td
= render :partial => "posts/new", :locals => {:post => @post} 
= render :partial => "posts/edit", :locals => {:post => @post}
