%header
.container
  =form_for @user do |f|
    -if @user.errors.any?
      .error_messages
        %h2 Form is invalid
        %ul
          - @user.errors.full_messages.each do |message|
            = message
    .field
      %p
        =f.label :name
        =f.text_field :name
    .field
      %p
        =f.label :password
        =f.password_field :password
    .field
      %p
        =f.label :password_confirmation
        =f.password_field :password_confirmation
    .actions
      %p{ :class => "button" } 
        =f.submit

