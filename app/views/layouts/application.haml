!!! 5
%html
  %head
    %title CrossTheStreams  
    = stylesheet_link_tag "application", controller_name, :media => "all"
    = javascript_include_tag "application", controller_name
    = javascript_include_tag "d3.v2.min"
    = csrf_meta_tags
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
  %body
    .container
      %header{:class => "jumbotron subhead"}
        #admin-nav
          -if current_user
            %ul
              %li 
                Logged in as #{current_user.name}
              %li
                =link_to "Log out", logout_path
        .title 
          %h1
            %a{ :href => root_path } CrossTheStreams  
      .navbar
        .navbar-inner
          .container
            %ul{:class => "nav"}
              %li
                =form_tag('/search', :class => "navbar-search pull-right") 
                =search_field_tag "search", nil, :type => "text", :class =>"search-query span2", :id => "blog-search", :placeholder => "Press 's' to search"
            %ul{:class => "nav", :style => "width:450px"}
              %li
                %a{:href => "#"} Blog
              %li
                %a{:href => "#"} Static 1
              %li
                %a{:href => "#"} Static 2
    .container
      -flash.each do |name, msg|
        =content_tag :div, msg, :id => "flash#{name}", :class => "alert"
      =yield


